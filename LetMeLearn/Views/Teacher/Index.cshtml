@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside id="fh5co-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(images/img_bg_4.jpg);">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center slider-text">
                            <div class="slider-text-inner">
                                <h1 class="heading-section">Our Faculty</h1>
                                <h2>Free html5 templates Made by <a href="http://Incerberus, INC/" target="_blank">Incerberus, INC</a></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div id="fh5co-staff">
    <div class="container">
        <div class="row">
            @foreach (var teacher in ViewBag.Teachers)
            {

                <div class="col-md-3 text-center">
                    <div class="staff">
                        <div class="staff-img" style="background-image: url(images/staff-1.jpg);">
                            <ul class="fh5co-social">
                                <li><a href="#"><i class="icon-facebook2"></i></a></li>
                                <li><a href="#"><i class="icon-twitter2"></i></a></li>
                                <li><a href="#"><i class="icon-dribbble2"></i></a></li>
                                <li><a href="#"><i class="icon-github"></i></a></li>
                            </ul>
                        </div>
                        <span>@teacher.Domain</span>
                        <h3><a href="#">@teacher.Name</a></h3>
                        <p>@teacher.Description</p>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
